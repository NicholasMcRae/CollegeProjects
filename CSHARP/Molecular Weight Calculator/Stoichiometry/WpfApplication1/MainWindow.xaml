<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Molecular Weight Calculator" Height="180.126" Width="366.841">
    <Grid x:Name="weight">
        <Label x:Name="EnterFormula" Content="Enter Formula" HorizontalAlignment="Left" Margin="33,10,0,0" VerticalAlignment="Top" Width="87"/>
        <ComboBox x:Name="formulaCombo" HorizontalAlignment="Left" Margin="33,39,0,0" VerticalAlignment="Top" Width="151" Height="24" RenderTransformOrigin="-0.841,0.587" IsEditable="True"/>
        <Label x:Name="Molecular_Weight" Content="Molecular Weight" HorizontalAlignment="Left" Margin="33,67,0,0" VerticalAlignment="Top" Width="107"/>
        <TextBox x:Name="weight1" HorizontalAlignment="Left" Height="27" Margin="33,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" IsEnabled="False"/>
        <Button x:Name="close" Content="Close" HorizontalAlignment="Left" Margin="255,40,0,0" VerticalAlignment="Top" Width="75" Click="close_Click"/>
        <Button x:Name="normalize" Content="Normalize" HorizontalAlignment="Left" Margin="255,71,0,0" VerticalAlignment="Top" Width="75" Click="normalize_Click"/>
        <Button x:Name="calculate" Content="Calculate" HorizontalAlignment="Left" Margin="255,103,0,0" VerticalAlignment="Top" Width="75" Click="calculate_Click"/>

    </Grid>
</Window>
